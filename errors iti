        <td>{{ itinerary.endDate }}</td>
        <td>
          <button (click)="openEditForm(itinerary)" class="edit-btn">Edit</button>
          <button (click)="deleteItinerary(itinerary.id)" class="delete-btn">Delete</button>
        </td>
      </tr>
    </tbody>
  </table>

